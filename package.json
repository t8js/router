{
  "name": "@t8/router",
  "version": "1.2.2",
  "description": "Vanilla JS/TS router",
  "keywords": [
    "history",
    "routing",
    "spa"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/router.git"
  },
  "license": "MIT",
  "author": "axtk",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx npm-run-all clean compile",
    "clean": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "demo": "npx @t8/serve 3000 * tests/routing -b",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all typecheck shape build test",
    "shape": "npx codeshape",
    "test": "npx playwright test --project=chromium",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@t8/serve": "^0.1.30",
    "@types/node": "^24.5.2",
    "typescript": "^5.9.3",
    "url-shape": "^1.3.3",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "quasiurl": "^1.1.2"
  }
}
