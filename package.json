{
  "name": "@t8/router",
  "version": "1.0.23",
  "description": "Vanilla JS/TS browser history router",
  "keywords": [
    "history",
    "routing",
    "spa"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/router.git"
  },
  "license": "ISC",
  "author": "axtk",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx npm-run-all clean compile",
    "clean": "node -e \"require('node:fs').rmSync('dist', {force: true, recursive: true});\"",
    "compile": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "demo": "npx @t8/serve 3000 * tests -b",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all typecheck shape build test",
    "shape": "npx codeshape",
    "test": "npx playwright test --project=chromium",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "quasiurl": "^1.0.0",
    "unpack-schema": "^1.2.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  }
}
